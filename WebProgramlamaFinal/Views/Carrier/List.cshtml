@model IEnumerable<GetCarrierDto>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Taþýyýcý Listesi</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3 align-items-center">
            <div class="col-md-8">
                <form asp-controller="Carrier" asp-action="Search" method="get" class="d-flex">
                    <input type="text" name="carrierName" class="form-control me-2" placeholder="Taþýyýcý adý ile ara..." value="@Context.Request.Query["carrierName"]" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i> Ara
                    </button>
                    @if (!string.IsNullOrEmpty(Context.Request.Query["carrierName"]))
                    {
                        <a asp-action="Search" class="btn btn-outline-secondary ms-2">Temizle</a>
                    }
                </form>
            </div>
            <div class="col-md-4 text-end">
                <a asp-controller="Carrier" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Taþýyýcý
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Taþýyýcý Id</th>
                    <th>Taþýyýcý Adý</th>
                    <th class="text-center">Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any()){
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                    <form asp-action="Delete" asp-route-id="@obj.Id" method="post">
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Silmek istediðinize emin misiniz?')">
                                            Sil
                                        </button>
                                    </form>
                            </div>
                        </td>
                    </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">Aranan kriterlere uygun taþýyýcý bulunamadý.</div>
                }
            </tbody>
        </table>
    </div>
</div>