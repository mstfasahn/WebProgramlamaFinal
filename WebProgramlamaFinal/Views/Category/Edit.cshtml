@model WPF.Models.Dtos.Category.UpdateCategoryDto

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Kategoriyi Düzenle</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row">
            
            <input asp-for="Id" type="hidden" />

            <div class="border p-3">
                @* Kategori Adý *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" placeholder="Kategori Adý" />
                    <label asp-for="Name" class="ms-2">Kategori Adý</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @* Görüntüleme Sýrasý *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" placeholder="Sýralama" />
                    <label asp-for="DisplayOrder" class="ms-2">Görüntüleme Sýrasý</label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Güncelle</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="List" class="btn btn-outline-primary border form-control">
                            Ýptal
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}