
@model ListCityVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Þehir Yönetimi</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                @* Arama barý buraya eklenebilir *@
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Þehir Ekle
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Þehir Adý</th>
                    <th>Posta Kodu</th>
                    <th>Baðlý Olduðu Ülke</th>
                    <th class="text-center">Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cities)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@(item.PostalCode ?? "---")</td>
                        <td>
                            <span class="badge bg-info text-dark">@item.CountryName</span>
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                      onsubmit="return confirm('Bu þehri silmek istediðinize emin misiniz?')">
                                    <button type="submit" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Sil
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>