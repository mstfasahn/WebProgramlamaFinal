@model IEnumerable<GetProductDto>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Ürün Yönetimi</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <h4 class="text-primary">Ürünleriniz</h4>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Baþlýk</th>
                    <th>ISBN</th>
                    <th>Fiyat</th>
                    <th>Yazar</th>
                    <th>Kategori</th> @* Kategori ismini eklemediysen ID görünecek *@
                    <th class="text-center">Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td>
                        <td>@obj.Price.ToString("C")</td>
                        <td>@obj.Author</td>
                        <td>@obj.CategoryName</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                                @* Form kullanarak silme (405 hatasýný engeller) *@
                                <form asp-action="Delete" asp-route-id="@obj.Id" method="post"
                                      onsubmit="return confirm('Silmek istediðinize emin misiniz?')">
                                    <button type="submit" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Sil
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>