
@model ListStateVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Ýlçe / Eyalet Yönetimi</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @* --- ARAMA VE FÝLTRELEME --- *@
        <form asp-action="Search" method="get" class="row g-3 mb-4 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-bold">Ýlçe Adý</label>
                <input type="text" asp-for="SearchStateName" class="form-control" placeholder="Ara..." />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold">Þehir Filtresi</label>
                <select asp-for="SelectedCityId" asp-items="@Model.Cities" class="form-select">
                    <option value="">-- Tüm Þehirler --</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-funnel"></i> Filtrele
                </button>
                <a asp-action="Search" class="btn btn-outline-secondary">Temizle</a>
            </div>
        </form>

        <hr />

        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Yeni Ýlçe Ekle
            </a>
        </div>

        @* --- TABLO --- *@
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Ýlçe Adý</th>
                    <th>Baðlý Olduðu Þehir</th>
                    <th class="text-center" style="width: 250px;">Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.States.Any())
                {
                    @foreach (var item in Model.States)
                    {
                        <tr>
                            <td class="fw-bold">@item.Name</td>
                            <td>
                                <span class="badge bg-light text-primary border border-primary">
                                    <i class="bi bi-building me-1"></i> @item.CityName
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-1">
                                        <i class="bi bi-pencil-square"></i> Düzenle
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                          onsubmit="return confirm('Bu ilçeyi silmek istediðinize emin misiniz?')">
                                        <button type="submit" class="btn btn-danger btn-sm mx-1">
                                            <i class="bi bi-trash-fill"></i> Sil
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center py-4 text-muted italic">Kayýt bulunamadý.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>