@model ListUserVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"><i class="bi bi-people-fill"></i> Kullanýcý Yönetimi</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @* Arama ve Filtreleme Formu *@
        <form asp-action="List" method="get" class="row g-3 mb-4 pb-3 border-bottom">
            @* Ad Soyad Arama *@
            <div class="col-md-3">
                <label class="form-label fw-bold">Ad Soyad</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                    <input type="text" name="nameSearch" class="form-control" placeholder="Ýsim yazýn..." value="@Model.NameSearch" />
                </div>
            </div>

            @* Email Arama *@
            <div class="col-md-3">
                <label class="form-label fw-bold">E-Posta</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                    <input type="text" name="emailSearch" class="form-control" placeholder="Email yazýn..." value="@Model.EmailSearch" />
                </div>
            </div>

            @* Rol Filtresi *@
            <div class="col-md-3">
                <label class="form-label fw-bold">Rol</label>
                <select name="roleId" class="form-select" asp-items="Model.Roles">
                    <option value="">-- Tüm Roller --</option>
                </select>
            </div>

            @* Butonlar *@
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    <i class="bi bi-funnel"></i> Filtrele
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>

        @* Kullanýcý Tablosu *@
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th class="text-center" style="width: 250px;">Ýþlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        @foreach (var obj in Model.Users)
                        {
                            <tr>
                                <td>@obj.Name</td>
                                <td>@obj.Email</td>
                                <td>
                                    <span class="badge bg-info text-dark">@obj.Role.Name</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil-square"></i> Düzenle
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@obj.Id" method="post"
                                              onsubmit="return confirm('Bu kullanýcýyý silmek istediðinize emin misiniz?')">

                                            <button type="submit" class="btn btn-sm btn-danger ms-1">
                                                <i class="bi bi-trash-fill"></i> Sil
                                            </button>

                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="bi bi-info-circle fs-4 d-block mb-2"></i>
                                Aradýðýnýz kriterlere uygun sonuç bulunamadý.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>